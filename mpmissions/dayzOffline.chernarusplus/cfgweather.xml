<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!-- 'reset' і 'enable' є булевими значеннями та підтримують: 0/1, true/false, yes/no -->
<!-- 'reset' — чи потрібно завантажувати погоду з пам’яті (за замовчуванням — false) -->
<!-- 'enable' — чи активний цей файл конфігурації (за замовчуванням — true) -->
<weather reset="1" enable="0">
    <overcast>
        <!-- Початковий рівень хмарності (цільове значення, час досягнення, тривалість утримання) -->
        <current actual="0.45" time="120" duration="240" />
        <!-- Діапазон можливих значень хмарності (від 0 до 1) -->
        <limits min="0.0" max="1.0" />
        <!-- Час, за який хмарність змінюється (у секундах) -->
        <timelimits min="900" max="1200" />
        <!-- Наскільки може змінитися рівень хмарності (від 0 до 1) -->
        <changelimits min="0.0" max="1.0" />
    </overcast>
    <fog>
        <!-- Початковий рівень туману (цільове значення, час досягнення, тривалість утримання) -->
        <current actual="0.05" time="120" duration="240" />
        <!-- Діапазон можливих значень туману -->
        <limits min="0.02" max="0.08" />
        <!-- Час зміни туману -->
        <timelimits min="900" max="900" />
        <!-- Наскільки може змінюватися туман -->
        <changelimits min="0.0" max="1.0" />
    </fog>
    <rain>
        <!-- Початковий рівень дощу -->
        <current actual="0.0" time="60" duration="120" />
        <!-- Діапазон значень дощу -->
        <limits min="0.0" max="1.0" />
        <!-- Час, за який дощ змінюється -->
        <timelimits min="60" max="120" />
        <!-- Наскільки змінюється рівень дощу -->
        <changelimits min="0.0" max="1.0" />
        <!-- Діапазон хмарності, при якому можливий дощ, та скільки часу триває дощ, якщо хмарність виходить за межі -->
        <thresholds min="0.75" max="1.0" end="60" />
    </rain>
    <windMagnitude>
        <!-- Початкова швидкість вітру (м/с), час зміни, як довго залишиться -->
        <current actual="6.0" time="120" duration="240" />
        <!-- Діапазон швидкостей вітру (м/с) -->
        <limits min="0.0" max="12.0" />
        <!-- Час, за який змінюється швидкість -->
        <timelimits min="120" max="240" />
        <!-- Наскільки може змінитися швидкість -->
        <changelimits min="0.0" max="12.0" />
    </windMagnitude>
    <windDirection>
        <!-- Початковий напрямок (у радіанах), час зміни, тривалість -->
        <current actual="0.0" time="120" duration="240" />
        <!-- Діапазон напрямку вітру (від -π до π) -->
        <limits min="-3.14" max="3.14" />
        <!-- Час зміни напрямку -->
        <timelimits min="60" max="120" />
        <!-- Наскільки змінюється напрямок (у радіанах) -->
        <changelimits min="-1.0" max="1.0" />
    </windDirection>
    <!-- Snowfall should always remain at 0 for this world. -->
    <snowfall>
        <!-- Сніг вимкнено. Початкове значення, час зміни, тривалість -->
        <current actual="0.0" time="0" duration="32768" />
        <!-- Діапазон значень снігу — завжди 0 -->
        <limits min="0.0" max="0.0" />
        <!-- Час зміни снігу (не використовується) -->
        <timelimits min="300" max="3600" />
        <!-- Наскільки змінюється сніг — 0 -->
        <changelimits min="0.0" max="0.0" />
        <!-- Поріг хмарності, при якому можливий сніг (неактуально) -->
        <thresholds min="1.0" max="1.0" end="120" />
    </snowfall>
    <!-- Грозова активність: щільність блискавок (0..1), поріг хмарності для появи блискавки, затримка між блискавками -->
    <storm density="1.0" threshold="0.9" timeout="45"/>
</weather>